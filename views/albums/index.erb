<br><br><h1>All Stock</h1><br><br>

<table>
  <tr>
    <th>Artist</th>
    <th>Album</th>
    <th>Buying cost</th>
    <th>Selling price</th>
    <th>Mark-up</th>
    <th>Stock</th>
    <th>Stock status</th>
  </tr>
  <% for artist in @artists %>
  <tr>
    <td><a href="/artists/<%= artist.id%>/albums"><%= artist.name %></a></td>
  </tr>
  <% for album in artist.albums %>
  <tr>
    <td></td>
    <td><%= album.id%> <%= album.title %></td>
    <td><%= album.buying_cost%></td>
    <td><%= album.price%></td>
    <td><%= (album.price)-(album.buying_cost)%></td>
    <td><%= album.stock%><br><a href="/albums/add/<%= album.id%>">Add to stock</a><br><a href="/albums/delete/<%= album.id%>">Reduce stock</a></td>
    <td class="<%= album.stock_status['class']%>"><%= album.stock_status['text']%></td>
  </tr>
  <% end %>
  <% end %>
</table><br><br><br>
