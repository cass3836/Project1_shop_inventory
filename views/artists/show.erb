<p><%=@artist.name%></p>

<table>
  <tr>
    <th>Album code</th>
    <th>Album title</th>
    <th>Buying cost</th>
    <th>Selling price</th>
    <th>Mark-up</th>
    <th>Stock</th>
    <th>In stock?</th>
    <th></th>
  </tr>
  <% for album in @artist.albums %>
  <tr>
    <td><%= album.id%></td>
    <td><%= album.title %></td>
    <td><%= album.buying_cost%></td>
    <td><%= album.price%></td>
    <td><%= (album.price)-(album.buying_cost)%></td>
    <td><%= album.stock%><br><a href="/artists/albums/add/<%= album.id%>">Add to stock</a><br><a href="/artists/albums/delete/<%= album.id%>">Reduce stock</a></td>
    <td><%= album.stock_status%></td>
    <td><a href="/artists/albums/<%= album.id%>">Edit Album</a></td>
  </tr>
  <% end %>
</table>

<br><br>

<form action="/artists/<%=@artist.id%>" method="post">
<label>
Add album:
</label><br>
<label>
Title:
</label>
<input name="title" type="text">
<label>
Buying cost:
</label>
<input name="buying_cost" type="text">
<label>
Price:
</label>
<input name="price" type="text">
<input name="artist_id" type="hidden" value ="<%=@artist.id%>">
<input type="submit">
</form>
