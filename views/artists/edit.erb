<br><br><h2>Edit '<%= @artist.name%>'</h2>
<br><br>
<form action="/artists/<%= @artist.id%>" method="post" >
  <input type="hidden" name="_method" value="put">
  <label>
    Name:
  </label>
  <input name="name" type="text" value="<%= @artist.name%>">
  <label>
    Genre:
    <select name="genre" selected="<%= @artist.genre%>">
      <% genres = ['Rock', 'Pop', 'Jazz', 'Other']%>
      <% for genre in genres %>
      <%if @artist.genre == genre %>
      <option value = <%= genre%> selected> <%= genre%></option>
      <% else %>
      <option value=<%= genre%>> <%= genre%></option>
      <% end %>
      <% end %>
    </select>
  </label>
  <input type="submit">
</form>
