<br><br><h1>Artists</h1>

<br><br>
<table>
  <tr>
    <th></th>
    <th>Name of artist/group</th>
    <th>Genre</th>
    <th>Delete</th>
    <th>Edit</th>
  </tr>
  <% for artist in @artists %>
  <tr>
    <td><%= artist.id%></td>
    <td><a href="/artists/<%= artist.id%>/albums"><%= artist.name %></a></td>
    <td><%= artist.genre%></td>
    <td><a href="/artists/delete/<%= artist.id%>"> Delete artist<br>from database</a></td>
    <td><a href="/artists/edit/<%= artist.id%>">Edit artist</a></td>
  </tr>
  <% end %>
</table>

<br><br>

<form class="artist_form" action="/artists" method="post">
  <label>
    <div class="add_artist_heading">Add artist:</div>
  </label><br>
  <label>
    Name:
  </label>
  <input name="name" type="text">
  <label>
    Genre:
    <select name="genre">
      <option>Rock</option>
      <option>Pop</option>
      <option>Jazz</option>
      <option>Other</option>
    </select>
  </label>
  <input type="submit">
</form><br><br><br>
